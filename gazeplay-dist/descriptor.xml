<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
        <!--format>tar.bz2</format-->
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/dist</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/bin</directory>
            <filtered>true</filtered>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <outputDirectory>./bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>src/main/bin</directory>
            <filtered>true</filtered>
            <includes>
                <include>**/*.bat</include>
            </includes>
            <outputDirectory>./bin</outputDirectory>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/licenses</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>./licenses</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.github.schwabdidier:gazeplay-data:jar</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>data/**</include>
                </includes>
            </unpackOptions>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/DLL</outputDirectory>
            <includes>
                <include>com.github.schwabdidier:gazeplay-dlls:jar</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>**/*.dll</include>
                </includes>
            </unpackOptions>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
